<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.25</item>
    </style>

    <style name="score_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:textSize">@dimen/score_text_size</item>
        <item name="android:layout_marginTop">@dimen/margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/margin_top_bottom</item>
        <item name="android:layout_marginEnd">@dimen/margin_left_right</item>
        <item name="android:layout_marginStart">@dimen/margin_left_right</item>
        <item name="android:text">@string/zero</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

</resources>
